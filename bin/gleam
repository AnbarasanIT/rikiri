#!/usr/bin/env python

import os
import sys
import argparse
import gleam

parser = argparse.ArgumentParser(description="Make github HTML presentation like a boss", add_help=True)
parser.add_argument("-t", "--title", help="title of the presentation", required=True)
parser.add_argument("-o","--outdir", help="output directory", required=True)
parser.add_argument("-s","--sourcedir", help="Source directory", required=True)


argv = parser.parse_args()

if len(sys.argv) <= 1:
    parser.print_help()
    sys.exit(0)

gleam.render(argv.title, argv.sourcedir, argv.outdir)